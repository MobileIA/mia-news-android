<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_news"
                    android:contentDescription="Image principal de la trivia"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/black_transparent"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Â¿Contra que equipo Messi metio 5 goles?"
                        android:textStyle="bold"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/text_caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esta es ala sdklahsdk lahsd kjahdk ahsdk ahskd ahd ahsdk ahsd kjsahdk jahsdk ahsdk jahsdkja skjah akj ds"
                        android:textSize="12sp"
                        android:lines="2"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray"
                        />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>